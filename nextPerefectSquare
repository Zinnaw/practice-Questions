import java.text.NumberFormat;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       Scanner scan = new Scanner(System.in);
        System.out.println("Please write an integer number");
        int number=scan.nextInt();
        for(int i=1;i>=0;i++){
            int nextNumber=number+i;
         double perfectSquare= Math.sqrt(nextNumber);
         if(perfectSquare==(int)perfectSquare){
             System.out.println("The next perfect square is "+nextNumber+".");
             break;
         }

        }
    }
    }
